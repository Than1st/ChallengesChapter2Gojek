<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gojek">
    <LinearLayout
        android:id="@+id/toolbar"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_shape"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <EditText
            android:layout_weight="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/search_shape"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:hint="@string/search_hint"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawableLeft="@drawable/ic_baseline_search_24" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/person_shape"
            android:padding="6dp"
            android:paddingLeft="8dp"
            android:src="@drawable/ic_baseline_person_24"
            app:tint="@color/green_gojek"
            android:paddingStart="8dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="100"
                android:id="@+id/gopay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/gopay_shape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_weight="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/gopay_total_shape">
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_gopay_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Rp109.048"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_gojek"
                        android:textStyle="bold"
                        android:text="Klik &amp; cek riwayat"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_upward_24"
                        android:tint="@color/gopay_blue"
                        android:background="@drawable/sub_gopay_shape"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayar"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_add_24"
                        android:tint="@color/gopay_blue"
                        android:background="@drawable/sub_gopay_shape"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi Saldo"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:weightSum="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/cute_rocket_launching"
                        android:tint="@color/gopay_blue"
                        android:background="@drawable/sub_gopay_shape"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eksplor"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <GridLayout
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="4"
                android:padding="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gopay">

                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/goride"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoRide" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/gocar"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoCar" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/gofood"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoFood" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/gosend"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoSend" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/gomart"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoMart" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/gopulsa"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="GoPulsa" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/cekin"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="Check In" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:drawableTop="@drawable/lainnya"
                    android:scaleX="0.85"
                    android:scaleY="0.85"
                    android:text="Lainnya" />
            </GridLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_goclub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/menu"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp">
                    <ImageView
                        android:layout_weight="20"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleY="3"
                        android:scaleX="3"
                        android:src="@drawable/ic_goclub_vertical_1"
                        android:padding="12dp" />
                    <LinearLayout
                        android:layout_weight="60"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="193 XP lagi ada Harta Karun"/>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="7"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_hourglass_done_svgrepo_com"/>
                            <TextView
                                android:paddingStart="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harta Karun bentar lagi hilang"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageButton
                        android:layout_weight="20"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/transparent"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_akses_cepat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Akses Cepat"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cv_goclub"
                app:layout_constraintStart_toStartOf="@id/cv_goclub"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_akses_cepat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_akses_cepat">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="fill">
                    <LinearLayout
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingStart="16dp"
                        android:paddingBottom="8dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/discount_round" />
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="fill"
                            android:text="Ada voucher nganggur. nih"/>
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                    </LinearLayout>
                    <View
                        android:id="@+id/horizontal_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey" />
                    <LinearLayout
                        android:weightSum="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:src="@drawable/gofood_round" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="fill"
                            android:text="Restoran terdekat" />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/cv_akses_cepat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="16dp"
                        android:textStyle="bold"
                        android:text="Festival idaman perempuan! ðŸ˜"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Temukan kebutuhan cantik-mu hemat pakai Gopay dengan cashback 50%. Klik! ðŸ‘ˆ"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="128dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/promo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/green_gojek"
        app:tabIconTint="@color/green_gojek"
        app:tabTextColor="@color/grey"
        app:tabSelectedTextColor="@color/green_gojek"
        app:tabMode="fixed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tabGravity="fill">
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_home_svgrepo_com"
            android:text="Home"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_discount_svgrepo_com"
            android:text="Promo"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_tasks_app_svgrepo_com"
            android:text="Pesanan"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_chat_svgrepo_com"
            android:text="Chat"/>
    </com.google.android.material.tabs.TabLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
